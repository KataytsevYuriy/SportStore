<form id="pageform" method="get" class="form-inline d-inline-block">
<button name="options.currentPage" value="@(Model.CurrentPage-1)" 
        class="btn btn-outline-primary @(Model.HasPreviousPage? "disabled":"")" type="submit">Previous</button>
    @for(int i=1; i<3 && Model.TotalPages-Model.CurrentPage >= 3; i++)
    {
        <button name="options.currentPage" value="@i" type="submit"
                class="btn btn-outline-primary @(Model.CurrentPage==i?"active":"")">@i</button> 
    }
</form> 